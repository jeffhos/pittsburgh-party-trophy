  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'bootstrap-sass'
  gem 'uglifier'
  gem 'slim'
  gem 'slim-rails'
end

gem 'jquery-rails'
gem 'clearance'
gem 'autoprefixer-rails'
gem 'bootstrap-datepicker-rails'
gem 'kaminari'
