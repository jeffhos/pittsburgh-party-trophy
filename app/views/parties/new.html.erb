<div class="container">
<h1>Tell Us About Your Party!</h1>

<p>Let us know the theme and whatever else was interesting about your party!</p>

  <% @party.errors.full_messages.each do |msg| %>
    <div class="alert alert-danger" role="alert"><%= msg %></div>
  <% end %>

<%= form_for(@party, :html => { :multipart => true }) do |f| %>

  <%
     display_classes = 'form-group'
     unless @party.errors[:name].empty?
       display_classes += ' has-error has-feedback'
     end
  %>
  <div class="<%= display_classes %>">
    <%= f.label :name %><br />
    <%= f.text_field :name, class: 'form-control input-lg' %>
    <% unless @party.errors[:name].empty? %>
      <span class="glyphicon glyphicon-remove form-control-feedback"></span>
    <% end %>
  </div>
  <div class="form-group">
    <%= f.label :happened_on, "When did it happen?" %><br/>
    <div class="input-group date">
      <%= f.text_field :happened_on, class: 'form-control' %><span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description %><br />
    <%= f.text_area :description, class: 'form-control' %>
  </div>

  <p>If you'd like, upload some pictures of your party:</p>
  <div class="form-group">
    <%= f.file_field :image1, class: 'filestyle' %>
    <%= f.file_field :image2, class: 'filestyle' %>
    <%= f.file_field :image3, class: 'filestyle' %>
  </div>

  <div class="actions">
    <%= f.submit "Submit Your Party", class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>

</div>